<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingActivity"
    android:background="@drawable/gradient_background">

    <!-- Animated Background Elements -->
    <View
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/glow_border"
        android:alpha="0.3" />

    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/glow_border"
        android:alpha="0.2" />

   <LinearLayout
       android:id="@+id/mainButtonsLayout"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerInParent="true"
       android:orientation="horizontal">

      <Button
          android:id="@+id/practiceButton"
          style="@style/ModernButton"
          android:layout_width="@dimen/button_width"
          android:layout_height="@dimen/button_height"
          android:layout_marginEnd="20dp"
          android:text="ðŸŽ® Single Player"
          android:textSize="@dimen/text_size_medium">

      </Button>

      <Button
       android:id="@+id/dualButton"
       style="@style/ModernButton"
       android:layout_width="@dimen/button_width"
       android:layout_height="@dimen/button_height"
       android:layout_marginStart="20dp"
       android:text="âš”ï¸ Dual Play"
       android:textSize="@dimen/text_size_medium">

  </Button>

   </LinearLayout>

   <!-- Game Description -->
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/mainButtonsLayout"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="30dp"
       android:layout_marginStart="60dp"
       android:layout_marginEnd="60dp"
       android:text="Test your finger speed and reflexes in this exciting tapping game!"
       android:textAlignment="center"
       android:textColor="@color/text_secondary"
       android:textSize="@dimen/text_size_small"
       android:alpha="0.8" />

</RelativeLayout> 