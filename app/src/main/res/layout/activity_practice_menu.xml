<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_side"
        tools:context=".PracticeMenuActivity">

        <!-- Top Spacer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_top_large" />

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Touch-based Game Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/glow_border"
                android:padding="@dimen/padding_standard"
                android:layout_marginBottom="@dimen/spacing_large"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🎮 Touch Challenge"
                    android:textColor="@color/text_accent"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:shadowColor="@color/neon_green"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4" />

                <EditText
                    android:id="@+id/touchesText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter number of touches"
                    android:textColorHint="@color/text_secondary"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_small"
                    android:padding="@dimen/button_padding"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:background="@drawable/glow_border"
                    android:inputType="number"
                    android:gravity="center"
                    android:minHeight="@dimen/button_min_height" />

                <Button
                    android:id="@+id/touchesStartButton"
                    style="@style/ModernButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🚀 Start Touch Challenge"
                    android:textSize="@dimen/text_size_medium"
                    android:padding="@dimen/button_padding"
                    android:minHeight="@dimen/button_min_height" />

            </LinearLayout>

            <!-- Time-based Game Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/glow_border"
                android:padding="@dimen/padding_standard"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⏱️ Time Challenge"
                    android:textColor="@color/text_neon"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:shadowColor="@color/neon_blue"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4" />

                <EditText
                    android:id="@+id/secondsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter time in seconds"
                    android:textColorHint="@color/text_secondary"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_small"
                    android:padding="@dimen/button_padding"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:background="@drawable/glow_border"
                    android:inputType="number"
                    android:gravity="center"
                    android:minHeight="@dimen/button_min_height" />

                <Button
                    android:id="@+id/secondsStartButton"
                    style="@style/ModernButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚡ Start Time Challenge"
                    android:textSize="@dimen/text_size_medium"
                    android:padding="@dimen/button_padding"
                    android:minHeight="@dimen/button_min_height" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>