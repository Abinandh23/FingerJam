<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_side"
        tools:context=".MultiplayerMenuActivity">

        <!-- Top Spacer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_top_large" />

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ® Multiplayer Mode"
            android:textColor="@color/text_neon"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/spacing_large"
            android:shadowColor="@color/neon_pink"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="@dimen/spacing_large">

            <Button
                android:id="@+id/createRoomButton"
                style="@style/ModernButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ  Create Room"
                android:textSize="18sp"
                android:padding="@dimen/button_padding"
                android:minHeight="@dimen/button_min_height"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:background="@drawable/glow_border" />

            <Button
                android:id="@+id/joinRoomButton"
                style="@style/ModernButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸšª Join Room"
                android:textSize="18sp"
                android:padding="@dimen/button_padding"
                android:minHeight="@dimen/button_min_height"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:background="@drawable/glow_border" />

            <Button
                android:id="@+id/refreshRoomsButton"
                style="@style/ModernButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”„ Refresh Rooms"
                android:textSize="16sp"
                android:padding="@dimen/button_padding"
                android:minHeight="@dimen/button_min_height"
                android:layout_marginBottom="@dimen/spacing_large"
                android:background="@drawable/glow_border" />

        </LinearLayout>

        <!-- Available Rooms Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/glow_border"
            android:padding="@dimen/padding_standard"
            android:layout_marginBottom="@dimen/spacing_large">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“‹ Available Rooms"
                android:textColor="@color/text_accent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/spacing_medium" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/roomsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp" />

        </LinearLayout>

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            style="@style/ModernButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â¬…ï¸ Back to Menu"
            android:textSize="16sp"
            android:padding="@dimen/button_padding"
            android:minHeight="@dimen/button_min_height"
            android:layout_gravity="center"
            android:background="@drawable/glow_border" />

    </LinearLayout>

</ScrollView> 