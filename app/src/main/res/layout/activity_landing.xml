<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingActivity"
    android:background="@drawable/gradient_background">

    <!-- Animated Background Elements -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/glow_border"
        android:alpha="0.3" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/glow_border"
        android:alpha="0.2" />

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/margin_side">

        <!-- Top Spacer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" />

        <!-- Buttons Section -->
        <LinearLayout
            android:id="@+id/mainButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="@dimen/spacing_large">

            <!-- Button Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/spacing_medium">

                <Button
                    android:id="@+id/practiceButton"
                    style="@style/ModernButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:text="🎮 Single Player"
                    android:textSize="@dimen/text_size_medium"
                    android:minHeight="@dimen/button_min_height"
                    android:minWidth="@dimen/button_min_width" />

                <Button
                    android:id="@+id/dualButton"
                    style="@style/ModernButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:text="⚔️ Dual Play"
                    android:textSize="@dimen/text_size_medium"
                    android:minHeight="@dimen/button_min_height"
                    android:minWidth="@dimen/button_min_width" />

            </LinearLayout>

        </LinearLayout>

        <!-- Description Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:text="Test your finger speed and reflexes in this exciting tapping game!"
                android:textAlignment="center"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_small"
                android:alpha="0.8"
                android:lineSpacingExtra="@dimen/spacing_small" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>